@using EntityLayer.Concrete
@model List<Customer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UILayout.cshtml";
}

<h1>Müşteriler Sayfası</h1>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Ad</th>
        <th>City</th>
        <th>Meslek</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <th>@item.Name</th>
            <th>@item.City</th>
            <th>@item.Job.Name</th>
            <th><a href="/Customer/DeleteCustomer/@item.Id" class="btn btn-danger">Sil</a></th>
            <th><a href="/Customer/UpdateCustomer/@item.Id" class="btn btn-success">Güncelle</a></th>
        </tr>
    }
</table>
<a href="/Customer/AddCustomer" class="btn btn-outline-info">Yeni Müşteri Ekle</a>


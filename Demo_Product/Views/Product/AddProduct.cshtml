@model EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/UILayout.cshtml";
}

<h1>Ürün Ekleme Sayfası</h1>

<form method="post">
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x=>x.Name, new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Name)
    <br />
    @Html.Label("Ürün Fiyatı")
    @Html.TextBoxFor(x=>x.Price, new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Price)
    <br />
    @Html.Label("Stok Miktarı")
    @Html.TextBoxFor(x=>x.Stock, new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.Stock)
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.v, new {@class="form-control"})
    <br />
    <button class="btn btn-outline-success">Kaydet</button>
</form>


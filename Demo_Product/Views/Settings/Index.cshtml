@model Demo_Product.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UILayout.cshtml";
}

<h1>Profil Düzenleme Sayfası</h1>

<form method="post">
    @Html.Label("Adınız");
    <input type="text" asp-for="Name" class="form-control"></input>
    <br />
    @Html.Label("Soyad");
    <input type="text" asp-for="SurName" class="form-control"></input>
    <br />
    @Html.Label("Email");
    <input type="text" asp-for="Email" class="form-control"></input>
    <br />
    @Html.Label("Gender");
    <input type="text" asp-for="Gender" class="form-control"></input>
    <br />
    @Html.Label("Şifre");
    <input type="text" asp-for="Password" class="form-control"></input>
    <br />
    @Html.Label("Şifre Tekrar");
    <input type="text" asp-for="ConfirmPassword" class="form-control"></input>
    <br />
    <button class="btn btn-warning">Kaydet</button>
</form>

